{
  "name": "seiri-client",
  "version": "0.1.2",
  "license": "MIT",
  "main": "main.js",
  "appId": "moe.chyyran.seiri",
  "description": "seiri Music Manager",
  "author": "Ronny Chan",
  "scripts": {
    "start": "electron .",
    "build": "electron-build-env neon build seiri-neon",
    "postinstall": "electron-builder install-app-deps",
    "pack-electron": "electron-builder --dir",
    "dist": "electron-builder",
    "publish-electron": "electron-builder publish"
  },
  "build": {
    "appId": "moe.chyyran.seiri",
    "productName": "seiri",
    "asarUnpack": [
      "*.exe",
      "*.asar",
      "seiri-watcher"
    ],
    "extraFiles": [
      "**/VisualElements/*",
      "**/seiri.VisualElementsManifest.xml"
    ]
  },
  "win": {
    "files": [
      "seiri-watcher.exe"
    ],
    "publish": [
      "github"
    ]
  },
  "appx": {
    "backgroundColor": "#EA0032"
  },
  "dependencies": {
    "electron-is-dev": "^0.3.0",
    "electron-updater": "^2.21.10",
    "node-notifier": "^5.2.1",
    "opn": "^5.3.0",
    "seiri-neon": "file:../seiri-neon",
    "toml-js": "^0.0.8"
  },
  "devDependencies": {
    "electron": "^1.8.3",
    "electron-build-env": "^0.2",
    "electron-builder": "^20.11.1",
    "neon-cli": "^0.1.17"
  }
}
